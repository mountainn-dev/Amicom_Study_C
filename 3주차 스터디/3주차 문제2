#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>


int main(void)
{
	char abcd[] = "hello world you can do it don't give up";
	int str_length = sizeof(abcd)/sizeof(int);//위 배열의 길이를 저장
	char new_arr[100];//배열의 최대길이를 모르므로 임의의 값을 설정, 동적할당으로 길이에 변수 str_length를 사용해도 됨.

	for (int i = 0;i < str_length;i++) 
		new_arr[i] = abcd[i];
	printf("%s", new_arr);
}
